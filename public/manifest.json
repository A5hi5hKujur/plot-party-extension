{
    "manifest_version": 3,
    "name": "PlotParty",
    "version": "1.0.0",
    "description": "YouTube Overlay Controller",
    "content_scripts": [
      {
        "matches": ["*://www.youtube.com/watch*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "permissions": ["activeTab", "scripting"],
    "action": {
        "default_popup": "index.html"
    },
    "host_permissions": ["*://www.youtube.com/*"]
}