{
  "manifest_version": 3,
  "name": "PlotParty",
  "version": "1.0.0",
  "description": "YouTube Overlay Controller",
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*"],
      "js": ["src/content.tsx"]
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "public/vite.svg",
      "48": "public/vite.svg",
      "128": "public/vite.svg"
    }
  },
  "host_permissions": ["*://www.youtube.com/*"]
}